pipeline {
    agent any

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/TriptiP-Code/tripti-devops-project.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh '''
                    pip install -r requirements.txt
                '''
            }
        }

        stage('Build Docker Image') {
            steps {
                sh '''
                    docker build -t tripti-app .
                '''
            }
        }

        stage('Run Docker Container') {
            steps {
                sh '''
                    docker run -d --name tripti-app-container -p 5000:5000 tripti-app || true
                '''
            }
        }
    }

    post {
        always {
            sh 'docker ps -a'
        }
    }
}
